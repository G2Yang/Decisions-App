<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_blue">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/settings"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:textAllCaps="true"
            >
        </TextView>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/footerButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btSettings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_settings_icon"
                android:contentDescription="btSettings"
                >

            </Button>

            <Button
                android:id="@+id/btHome"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_home_icon"
                android:contentDescription="buttonHome"

                >
            </Button>

            <Button
                android:id="@+id/btFriends"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_friends_icon"
                android:contentDescription="btFriends"

                ></Button>
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:scrollIndicators="left"
        android:layout_below="@+id/header"
        android:layout_above="@id/footer"
        >

        <TextView
            android:id="@+id/message"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/select_your_language"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_language"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"

            >
        </TextView>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/message"
            android:fillViewport="true"
            android:layout_centerHorizontal="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:scrollIndicators="left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                >



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/en_language"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center|center_vertical"
                        >

                    </androidx.constraintlayout.utils.widget.ImageFilterView>

                    <Button
                        android:id="@+id/btEnglish"
                        android:layout_width="225dp"
                        android:layout_height="60dp"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/custom_right_icon"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="left|center_vertical"
                        android:text="@string/english"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:layout_marginLeft="5dp"
                        >

                    </Button>

                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="255dp"
                    android:layout_height="1dp"
                    android:background="@color/medium_blue"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/es_language"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        >
                    </androidx.constraintlayout.utils.widget.ImageFilterView>

                    <Button
                        android:id="@+id/btSpanish"
                        android:layout_width="225dp"
                        android:layout_height="60dp"
                        android:text="@string/spanish"
                        android:textAllCaps="false"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:drawableEnd="@drawable/custom_right_icon"
                        android:layout_marginLeft="5dp"
                        >
                    </Button>


                </LinearLayout>

                <View
                    android:layout_width="255dp"
                    android:layout_height="1dp"
                    android:background="@color/medium_blue"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/zh_language"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        >
                    </androidx.constraintlayout.utils.widget.ImageFilterView>

                    <Button
                        android:id="@+id/btChinese"
                        android:layout_width="225dp"
                        android:layout_height="60dp"
                        android:text="@string/chinese"
                        android:textAllCaps="false"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:drawableEnd="@drawable/custom_right_icon"
                        android:layout_marginLeft="5dp"
                        >
                    </Button>


                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="255dp"
                    android:layout_height="1dp"
                    android:background="@color/medium_blue"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ca_language"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        >
                    </androidx.constraintlayout.utils.widget.ImageFilterView>

                    <Button
                        android:id="@+id/btCatalan"
                        android:layout_width="225dp"
                        android:layout_height="60dp"
                        android:text="@string/catalan"
                        android:textAllCaps="false"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:drawableEnd="@drawable/custom_right_icon"
                        android:layout_marginLeft="5dp"
                        >
                    </Button>


                </LinearLayout>

                <View
                    android:layout_width="255dp"
                    android:layout_height="1dp"
                    android:background="@color/medium_blue"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/hi_language"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        >
                    </androidx.constraintlayout.utils.widget.ImageFilterView>

                    <Button
                        android:id="@+id/btHindi"
                        android:layout_width="225dp"
                        android:layout_height="60dp"
                        android:text="@string/hindi"
                        android:textAllCaps="false"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:drawableEnd="@drawable/custom_right_icon"
                        android:layout_marginLeft="5dp"
                        >
                    </Button>


                </LinearLayout>

                <View
                    android:layout_width="255dp"
                    android:layout_height="1dp"
                    android:background="@color/medium_blue"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/de_language"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        >
                    </androidx.constraintlayout.utils.widget.ImageFilterView>

                    <Button
                        android:id="@+id/btGerman"
                        android:layout_width="225dp"
                        android:layout_height="60dp"
                        android:text="@string/german"
                        android:textAllCaps="false"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:drawableEnd="@drawable/custom_right_icon"
                        android:layout_marginLeft="5dp"
                        >
                    </Button>


                </LinearLayout>

                <View
                    android:layout_width="255dp"
                    android:layout_height="1dp"
                    android:background="@color/medium_blue"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="45dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/pt_language"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        >
                    </androidx.constraintlayout.utils.widget.ImageFilterView>

                    <Button
                        android:id="@+id/btPortuguese"
                        android:layout_width="225dp"
                        android:layout_height="60dp"
                        android:text="@string/portuguese"
                        android:textAllCaps="false"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:drawableEnd="@drawable/custom_right_icon"
                        android:layout_marginLeft="5dp"
                        >
                    </Button>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>