<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/friends"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:textAllCaps="true"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
        </TextView>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:id="@+id/footerButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btSettings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_settings_icon"
                android:contentDescription="btSettings"
                >

            </Button>

            <Button
                android:id="@+id/btHome"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_home_icon"
                android:contentDescription="buttonHome"

                >
            </Button>

            <Button
                android:id="@+id/btFriends"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_friends_icon"
                android:contentDescription="btFriends"

                ></Button>
        </LinearLayout>

    </RelativeLayout>


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header"
        android:fillViewport="true"
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/myLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            >

            <TextView
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_friends_black"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/manage_friends"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="22dp"></TextView>

            <Button
                android:id="@+id/btAdd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_style2"
                android:drawableEnd="@drawable/custom_right_icon"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="left|center_vertical"
                android:text="@string/add_friends"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:stateListAnimator="@null"
                android:paddingStart="18dp"></Button>

            <View
                android:id="@+id/line"
                android:layout_width="255dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/medium_blue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btRemove"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_style2"
                android:drawableEnd="@drawable/custom_right_icon"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="left|center_vertical"
                android:text="@string/remove_friends"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:stateListAnimator="@null"
                android:paddingStart="18dp"></Button>

            <View
                android:id="@+id/line2"
                android:layout_width="255dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/medium_blue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btRequests"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_style2"
                android:drawableEnd="@drawable/custom_right_icon"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="left|center_vertical"
                android:text="@string/friend_requests"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:stateListAnimator="@null"
                android:paddingStart="18dp">

            </Button>






        </LinearLayout>
    </ScrollView>
</RelativeLayout>