<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue">



    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/take_decision"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:fontFamily="@font/brown_sugar2"
            android:textAllCaps="true"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
        </TextView>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/footerButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btSettings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_settings_icon"
                android:contentDescription="btSettings"
                >

            </Button>

            <Button
                android:id="@+id/btHome"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/custom_home_icon"
                android:contentDescription="buttonHome"

                >
            </Button>

            <Button
                android:id="@+id/btFriends"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_friends_icon"
                android:contentDescription="btFriends"

                ></Button>
        </LinearLayout>

    </RelativeLayout>



    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header"
        android:fillViewport="true"
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/write_your_decision"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black">
            </TextView>

            <EditText
                android:id="@+id/etdecision"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/write_here"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="20dp"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck"
                android:background="@drawable/textbox_style"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:paddingTop="12dp"
                android:textIsSelectable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                ></EditText>

            <View
                android:layout_width="285dp"
                android:layout_height="1dp"
                android:background="@color/medium_blue"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_request"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black">
            </TextView>

            <ListView
                android:id="@+id/lvConnect"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/listview_style"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Search persons"
                android:textSize="20dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:listSelector="@drawable/list_selector"
                android:divider="@drawable/custom_divider"
                android:dividerHeight="1dp"
                tools:ignore="MissingConstraints">

            </ListView>

            <TextView
                android:id="@+id/infoConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_don_t_have_friends_to_play"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:visibility="gone">
            </TextView>

            <View
                android:layout_width="285dp"
                android:layout_height="1dp"
                android:background="@color/medium_blue"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accept_request"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black">
            </TextView>

            <ListView
                android:id="@+id/lvAccept"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/listview_style"
                android:divider="@drawable/custom_divider"
                android:dividerHeight="1dp"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Search persons"
                android:listSelector="@drawable/list_selector"
                android:textSize="20dp"
                tools:ignore="MissingConstraints"></ListView>

            <TextView
                android:id="@+id/infoRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_don_t_have_requests_to_play"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:visibility="gone">
            </TextView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>