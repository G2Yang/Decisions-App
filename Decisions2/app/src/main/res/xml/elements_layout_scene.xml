<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="6000"
        motion:autoTransition="animateToEnd"
        >
        <KeyFrameSet >
            <KeyAttribute
                motion:motionTarget="@+id/fire"
                motion:framePosition="0"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/wave"
                motion:framePosition="0"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/wave2"
                motion:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/background"
                motion:framePosition="70"
                android:scaleY="1" />
            <KeyAttribute
                motion:motionTarget="@+id/background"
                motion:framePosition="100"
                android:scaleY="10000" />
            <KeyAttribute
                motion:motionTarget="@+id/background"
                motion:framePosition="0"
                android:scaleY="1" />
            <KeyAttribute />

            <KeyAttribute
                motion:motionTarget="@+id/fire"
                motion:framePosition="30"
                android:alpha="0"/>

            <KeyAttribute
                motion:motionTarget="@+id/wave"
                motion:framePosition="30"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/wave2"
                motion:framePosition="30"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/wave"
                motion:framePosition="38"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/wave"
                motion:framePosition="40"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/wave"
                motion:framePosition="100"
                android:alpha="0"/>

            <KeyAttribute
                motion:motionTarget="@+id/logoDecisions"
                motion:framePosition="0"
                android:alpha="0"/>

            <KeyAttribute
                motion:motionTarget="@+id/logoDecisions"
                motion:framePosition="80"
                android:scaleX="1"
                android:scaleY="1"
                android:alpha="0"/>

            <KeyAttribute
                motion:motionTarget="@+id/logoDecisions"
                motion:framePosition="100"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:alpha="1"/>

            <KeyAttribute
                motion:motionTarget="@+id/logoDecisions"
                motion:framePosition="100"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:alpha="1"/>




        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:id="@+id/ice"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1px"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/background" />
        <Constraint
            android:id="@+id/water"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/wave"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:layout_height="300dp"
            motion:layout_editor_absoluteX="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/fire" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="1px"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/background" />
        <Constraint
            android:id="@+id/ice"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/water"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/wave"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/fire"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0" />

    </ConstraintSet>
</MotionScene>