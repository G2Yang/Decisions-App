<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="6000"
        motion:autoTransition="animateToEnd"
        >
        <KeyFrameSet >
            <KeyAttribute
                motion:motionTarget="@+id/ball"
                motion:framePosition="0"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/robot"
                motion:framePosition="0"
                android:alpha="0"
                android:scaleY="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/background"
                motion:framePosition="70"
                android:scaleY="1" />
            <KeyAttribute
                motion:motionTarget="@+id/background"
                motion:framePosition="100"
                android:scaleY="10000" />
            <KeyAttribute
                motion:motionTarget="@+id/background"
                motion:framePosition="0"
                android:scaleY="1" />
            <KeyAttribute />

            <KeyAttribute
                motion:motionTarget="@+id/robot"
                motion:framePosition="15"
                android:alpha="0"
                />

            <KeyAttribute
                motion:motionTarget="@+id/robot"
                motion:framePosition="20"
                android:alpha="2"
                android:scaleY="0"/>

            <KeyAttribute
                motion:motionTarget="@+id/robot"
                motion:framePosition="25"
                android:alpha="3"
                android:scaleY="2"/>

            <KeyAttribute
                motion:motionTarget="@+id/robot"
                motion:framePosition="30"
                android:alpha="2"
                android:scaleY="1"/>

            <KeyAttribute
                motion:motionTarget="@+id/robot"
                motion:framePosition="100"
                android:alpha="4"
                android:scaleY="1"/>


            <KeyAttribute
                motion:motionTarget="@+id/logoDecisions"
                motion:framePosition="0"
                android:alpha="0"/>

            <KeyAttribute
                motion:motionTarget="@+id/logoDecisions"
                motion:framePosition="80"
                android:scaleX="1"
                android:scaleY="1"
                android:alpha="0"/>

            <KeyAttribute
                motion:motionTarget="@+id/logoDecisions"
                motion:framePosition="100"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:alpha="1"/>

            <KeyAttribute
                motion:motionTarget="@+id/logoDecisions"
                motion:framePosition="100"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:alpha="1"/>




        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/ball"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"/>
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1px"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/background" />
        <Constraint
            android:id="@+id/robot"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="581dp" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="1px"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/background" />
        <Constraint
            android:id="@+id/robot"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="2"
            motion:layout_constraintTop_toTopOf="@+id/ball"
            motion:transitionEasing="accelerate"
            motion:pathMotionArc="none"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintVertical_bias="0.90" />

    </ConstraintSet>
</MotionScene>